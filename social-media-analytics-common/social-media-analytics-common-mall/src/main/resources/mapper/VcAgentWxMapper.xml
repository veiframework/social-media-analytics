    <select id="selectByAgentId" resultType="com.vchaoxi.vo.AgentWxVo">
        SELECT
        <include refid="Base_Column_List">
        </include>
        FROM vc_agent_wx WHERE is_delete = 0 AND agent_id = #{agentId}
