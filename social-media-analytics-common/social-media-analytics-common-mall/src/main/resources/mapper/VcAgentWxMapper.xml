        <result column="mp_app_secret" property="mpAppSecret" jdbcType="VARCHAR" />
        <result column="mp_token" property="mpToken" jdbcType="VARCHAR" />
        <result column="mp_aes_key" property="mpAesKey" jdbcType="VARCHAR" />
        <result column="mp_qr" property="mpQr" jdbcType="VARCHAR" />
        <result column="mp_main_body" property="mpMainBody" jdbcType="VARCHAR" />
