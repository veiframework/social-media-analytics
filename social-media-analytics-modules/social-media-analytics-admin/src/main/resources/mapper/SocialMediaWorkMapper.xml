<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chargehub.admin.work.mapper.SocialMediaWorkMapper">

    <select id="groupByAccountId0" resultType="com.chargehub.admin.work.domain.SocialMediaWork">
        select * from (
        SELECT IFNULL(SUM(thumb_num), 0) AS thumbNum,
        IFNULL(SUM(share_num), 0) AS shareNum,
        IFNULL(SUM(collect_num), 0) AS collectNum,
        IFNULL(SUM(comment_num), 0) AS commentNum,
        IFNULL(SUM(play_num), 0) AS playNum,
        account_id
        FROM social_media_work
        <where>
            <if test='userIds!=null'>
                AND user_id in
                <foreach item="item" index="index" collection="userIds" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="tenantId!=null">
                AND tenant_id = #{tenantId}
            </if>
        </where>
        GROUP BY account_id
        ) t
        <if test='ascFields!=null||descFields!=null'>
            ORDER BY
            <if test='ascFields!=null'>
                <foreach item="item" index="index" collection="ascFields" separator=",">
                    ${item} ASC
                </foreach>
            </if>
            <if test='descFields!=null'>
                <if test='ascFields!=null'>
                    ,
                </if>
                <foreach item="item" index="index" collection="descFields" separator=",">
                    ${item} DESC
                </foreach>
            </if>
        </if>
    </select>

    <select id="groupByUserIdAndPlatform0" resultType="com.chargehub.admin.work.domain.SocialMediaWork">
        SELECT platform_id,
        IFNULL(SUM(thumb_num), 0) AS thumb_num,
        IFNULL(SUM(share_num), 0) AS share_num,
        IFNULL(SUM(collect_num), 0) AS collect_num,
        IFNULL(SUM(comment_num), 0) AS comment_num,
        IFNULL(SUM(play_num), 0) AS play_num,
        count(*) as work_num,
        account_id
        FROM social_media_work
        <where>
            <if test='userIds!=null'>
               AND user_id in
                <foreach item="item" index="index" collection="userIds" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="tenantId!=null">
                AND tenant_id = #{tenantId}
            </if>
        </where>
        GROUP BY platform_id
    </select>


</mapper>